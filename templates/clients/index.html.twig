{#TEMPLATE TABLE CLIENTS#}
{# @var clientCollection \Domain\Collections\ClientCollection #}

{% extends "base.html.twig" %}

{% block body %}
    <h2> Clientes Finizens</h2>
    <div class="row mt-5">
        <div class="col-md-9">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total de clientes registrados</h5>
                            <p class="card-text">{{ clientCollection.totalClients }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total de clientes con carteras</h5>
                            <div class="card-text text-success">{{ clientCollection.totalClientsWithPortfolios }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <a href="{{ path('create_client') }}" class="btn btn-primary">Agregar nuevo cliente</a>
        </div>

    </div>
    <div class="mt-5">
        <table class="table table-striped" id="finizens-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Carteras</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>

                    {% for client in clientCollection.clientDTOCollection %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ client.name }}</td>
                        <td><a href="{{ path('show_client_portfolios',{uidentifier: client.uidentifier}) }}">Gestionar</a></td>
                        <td><a href="{{ path('show_client',{uidentifier: client.uidentifier}) }}"><i class="bi bi-pencil-square"></i></a></td>
                        <td><a href="{{ path('delete_client',{uidentifier: client.uidentifier}) }}"><i class="bi bi-trash3-fill"></i></a></td>
                    </tr>
                    {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}